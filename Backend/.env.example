# ============================================================
# Hatch Track - Environment Variables
# ============================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
# ============================================================

# ============================================================
# SERVER CONFIGURATION
# ============================================================
PORT=3000
NODE_ENV=development

# ============================================================
# MONGODB CONFIGURATION
# ============================================================
# MongoDB connection string
# Local: mongodb://localhost:27017/hatchseed
# Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/
MONGO_URI=mongodb://localhost:27017/hatchseed

# Alternative variable name (both DBurl and MONGO_URI are supported)
DBurl=mongodb://localhost:27017/hatchseed

# ============================================================
# CLOUDINARY CONFIGURATION
# ============================================================
# Get these from: https://cloudinary.com/console
CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# ============================================================
# JWT CONFIGURATION
# ============================================================
# Secret key for JWT token signing (use a strong random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_use_long_random_string

# Token expiration (optional, defaults handled in code)
JWT_EXPIRES_IN=7d

# ============================================================
# SEED IMAGE UPLOAD CONFIGURATION (Optional)
# ============================================================
# These override defaults in the code

# Maximum file size in MB (default: 10)
MAX_FILE_SIZE_MB=10

# GPS accuracy threshold in meters (default: 100)
GPS_ACCURACY_THRESHOLD=100

# Image age threshold in hours (default: 48)
IMAGE_AGE_THRESHOLD_HOURS=48

# Default farm radius in meters (default: 1000)
DEFAULT_FARM_RADIUS_METERS=1000

# ============================================================
# CORS CONFIGURATION (Optional)
# ============================================================
# Allowed origins for CORS (comma-separated)
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=*

# ============================================================
# LOGGING & MONITORING (Optional)
# ============================================================
# Set to 'true' to enable detailed logging
ENABLE_DEBUG_LOGS=false

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================
# NOTES:
# ============================================================
# 1. Never commit .env to git (add to .gitignore)
# 2. Use strong, unique values for JWT_SECRET
# 3. In production, use MongoDB Atlas (not local)
# 4. In production, set NODE_ENV=production
# 5. Generate secure secrets with: openssl rand -hex 32
# ============================================================
